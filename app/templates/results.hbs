<form class="form2">
    <ul class="formtwo">
    <li>
        <div class="ing">
            <label for="ing" class="options">Ingredients: </label>
            <input type="text" id="ing">
        </div>
    </li>

    <li>
        <div class="allergies">
        <label for="allergies" class="options">Allergies:
            <select id="allergies">
                <option value="">--Select--</option>
                <option>dummy1</option>
                <option>dummy2</option>
                <option>dummy3</option>
                <option>dummy4</option>
                <option>dummy5</option>
            </select>       
        </label>
        </div>
    </li>
    
    <li>
        <div class="diet">
        <label for="diet" class="options">Diet
            <select id="diet">
                <option>--Select--</option>
                <option>diet1</option>
                <option>diet2</option>
                <option>diet3</option>
                <option>diet4</option>
                <option>diet5</option>
            </select>
        </div>
    </li>

    <li>
        <div class="mealtype">
        <label for="mealtype" class="options">Meal Type:
            <select id="mealtype">
                <option>--Select--</option>
                <option>Breakfast</option>
                <option>Brunch</option>
                <option>Lunch</option>
                <option>Dinner</option>
            </select>
        </label>
        </div>
    </li>

    <li>
        <button type="button" class="submit2" {{action "submit" term}}>Search</button>
    </li>   
    </ul>
</form>

<div class="results">
    {{#each this.model.hits as |recipe|}}
        <div class="resitem">
            <img class="resultimg" src={{recipe.recipe.image}} alt="100 x 100">
            <h4 class="resultname">{{recipe.recipe.label}}</h4>
            <p class="resulting">Ingredients: 
                <ul>
                    {{#each recipe.recipe.ingredientLines as |ingredient|}}
                        <li>{{ingredient}}</li>                      
                    {{/each}}
                </ul>
                {{!-- {{recipe.recipe.ingredientLines}} --}}
            </p>
            <p class="calories">Calories: {{round-calories recipe.recipe.calories}}</p>
        </div>
    {{/each}}
</div>